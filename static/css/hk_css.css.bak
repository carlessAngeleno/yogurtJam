    width : 100px;
    margin-right: 5px;
    margin-left: 5px;
    padding-top : 4px;
    padding-right : 4px;
    padding-left : 4px;
    padding-bottom : 0px;
}


#player {
	width: 100%;
	height: 100%;
    margin-left: auto;
    margin-right:auto;	
}

#search_tab, #share_tab {
	width: 85%;
	height: 90%;
    margin-left: auto;
    margin-right:auto;	
    margin-top: 10px;
}

#share_tab {
	display: none;
}
